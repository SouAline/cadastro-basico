<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQuestion11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEACFA"
    tools:context=".cursosFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <TextView
        android:id="@+id/question11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FF6200EE"
        android:padding="50dp"
        android:text="Qual seu curso favorito"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup11"
        app:layout_constraintEnd_toStartOf="@+id/glR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/glL"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintEnd_toStartOf="@+id/glR"
        app:layout_constraintStart_toStartOf="@+id/glL"
        app:layout_constraintTop_toBottomOf="@+id/question11">

        <RadioButton
            android:id="@+id/rb11a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="JAVA"
            android:textColor="@color/corText"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="HTML/CSS"
            android:textColor="@color/corText"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="JAVASCRIPT"
            android:textColor="@color/corText"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FLUTTER"
            android:textColor="@color/corText"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11e"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TODOS ACIMA"
            android:textColor="@color/corText"
            android:textSize="20sp"
            android:padding="4dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SALVAR"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/glR"
        app:layout_constraintStart_toStartOf="@+id/glL"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup11"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>